<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.shubhamagrawal.tipstotravel.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".4"

        android:scaleType="centerCrop"
        android:src="@drawable/travel" />

    <TextView
        android:id="@+id/text_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:text="Select  The  Country"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/bahamas_button"
        android:layout_width="180sp"
        android:gravity="center"
        android:textSize="32dp"
        android:textAllCaps="true"
        android:layout_height="180sp"
        android:onClick="continuewiththiscountry"
        android:layout_below="@id/text_country"
        android:layout_marginLeft="8dp"
        android:background="@drawable/bahamasbutton"
        android:text="bahamas"
        android:textColor="#FFF"

        />



</RelativeLayout>
